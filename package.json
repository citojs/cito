{
	"name": "cito",
	"version": "0.0.0",
	"private": true,
	"engines": {
		"pnpm": ">=6",
		"node": ">=14"
	},
	"pnpm": {
		"peerDependencyRules": {
			"allowAny": [
				"react",
				"react-dom",
				"@types/react",
				"@types/react-dom"
			],
			"ignoreMissing": [
				"react",
				"react-dom",
				"@babel/*",
				"@types/*"
			]
		}
	},
	"workspaces": [
		"./packages/*"
	],
	"scripts": {
		"build": "cross-env FORCE_COLOR=1 turbo run build",
		"clean": "cross-env turbo run clean",
		"dev": "cross-env FORCE_COLOR=1 turbo run dev --no-cache --parallel --continue",
		"lint": "cross-env tsc && eslint \"src/**/*.{ts,tsx,mdx}\"",
		"format": "cross-env prettier --write \"src/**/*.{ts,tsx,mdx}\"",
		"test": "cross-env vitest",
		"test:ui": "cross-env vitest --ui",
		"test:coverage": "cross-env pnpm test --coverage",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "cross-env turbo run build --filter=cito && changeset publish"
	},
	"dependencies": {
		"@radix-ui/react-dialog": "^1.0.2",
		"framer-motion": "7.6.19",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-is": "18.2.0",
		"styled-components": "5.3.6"
	},
	"devDependencies": {
		"@changesets/cli": "^2.25.2",
		"@react-aria/focus": "3.10.0",
		"@testing-library/dom": "8.19.0",
		"@testing-library/jest-dom": "5.16.5",
		"@testing-library/react": "13.4.0",
		"@testing-library/react-hooks": "8.0.1",
		"@testing-library/user-event": "14.4.3",
		"@types/debug": "^4.1.7",
		"@types/react": "18.0.26",
		"@types/react-dom": "18.0.9",
		"@types/styled-components": "^5.1.26",
		"@types/testing-library__jest-dom": "5.14.5",
		"@typescript-eslint/eslint-plugin": "5.45.1",
		"@typescript-eslint/parser": "5.45.1",
		"@vitejs/plugin-react": "2.2.0",
		"@vitest/ui": "0.25.5",
		"cross-env": "7.0.3",
		"debug": "^4.3.4",
		"eslint": "8.29.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-jest-dom": "4.0.3",
		"eslint-plugin-jsx-a11y": "6.6.1",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-react": "7.31.11",
		"eslint-plugin-react-hooks": "4.6.0",
		"happy-dom": "7.7.2",
		"husky": "8.0.2",
		"lint-staged": "^13.1.0",
		"prettier": "2.8.0",
		"rollup-plugin-visualizer": "^5.8.3",
		"terser": "^5.16.1",
		"tsup": "^6.5.0",
		"turbo": "^1.6.3",
		"typescript": "4.9.3",
		"vite": "3.2.5",
		"vite-plugin-checker": "^0.5.1",
		"vite-plugin-inspect": "0.7.9",
		"vite-tsconfig-paths": "4.0.0",
		"vitest": "0.25.5"
	},
	"lint-staged": {
		"*.ts?(x)": "eslint --fix",
		"*.json": "prettier --write",
		"*.?(s)css": "prettier --write"
	}
}
